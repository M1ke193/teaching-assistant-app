<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbardiemdanhthucong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Điểm Danh Thủ Công">
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:clipToPadding="false"
        android:id="@+id/scroll_diemdanh_tc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbardiemdanhthucong"
        android:layout_marginTop="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textbuoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="Day 1"
                android:textColor="#007FE4"
                android:textSize="17dp"></TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listdiemdanhtc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:clipToPadding="false"></androidx.recyclerview.widget.RecyclerView>

            <Button
                android:id="@+id/bt_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/drawroundclassbt"
                android:padding="6dp"
                android:text="Submit"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"></Button>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>